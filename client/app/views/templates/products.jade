form.form-inline(role="form")
    .row
        .form-group.col-xs-7
            input#product-name(type="text", 
                               class="form-control",
                               required="required"
                               placeholder="Produit")
        .form-group.col-xs-2
            input#product-price(type="text",
                                class="form-control",
                                required="required"
                                pattern="[0-9]+(.[0-9]+)?"
                                title="le prix unitaire de ce produit (ex: 3.2)"
                                placeholder="Prix unitaire")
        .form-group.col-xs-2
            input#product-quantity(type="text",
                                   class="form-control",
                                   pattern="[0-9]+"
                                   title="le nombre de produits de ce type"
                                   placeholder="Quantité")
        .form-group.col-xs-1
            button(type="submit",
                   class="col-xs-1 btn btn-default glyphicon glyphicon-plus",
                   title="ajouter")
    .row
        .form-group.col-xs-11
            input#product-image(type="text", 
                                class="form-control",
                                placeholder="adresse image")
hr
.products-list
    .row
        div.form-group.col-xs-6
            input.search(type="text",
                         placeholder="filtrer",
                         class="form-control")
        button.sort(data-sort="price"
                    class="btn btn-default col-xs-2") trier par prix
        button.sort(data-sort="name"
                    class="btn btn-default col-xs-2") trier par nom
        button.sort(data-sort="quantity"
                    class="btn btn-default col-xs-2") trier par quantité
    ul.products.list
