form(role="form")
    .form-group
        input#recipe-name(type="text", 
                          class="form-control",
                          required="required"
                          placeholder="Nom de la recette")
    .form-group.col-xs-6
        textarea#recipe-description(type="text", 
                                    class="form-control",
                                    placeholder="Description de la recette")
    .form-group.col-xs-6
        label(for="recipe-products") Produits nécessaires :
        select#recipe-products(multiple="multiple",
                               data-live-search="true",
                               class="form-control select-picker")
            - each product in products
                option(value="#{product.attributes.name}") 
                    | #{product.attributes.name}
        label(for="recipe-products") Catégoriess :
        select#recipe-tags(multiple="multiple",
                           class="form-control select-picker")
                option(value="cheap") pas cher
                option(value="quick") rapide
                option(value="organic") bio
                option(value="light") light
    .form-group
        input#recipe-image(type="text", 
                           class="form-control",
                           placeholder="adresse de l'image")
    .form-group
        button(type="submit",
               class="btn btn-default",
               title="ajouter")
            span.glyphicon.glyphicon-plus
ul.recipes

