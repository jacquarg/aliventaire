@import 'nib'

background-color = #f5f5f5
color            = #868686

body
  background: background-color
  color: color
  font-size: 15px
  font-family: "Just Another Hand", cursive
  text-align: center
  margin: 0
  padding: 0

h1, h2, h3, h4, h5
  font-weight: normal
  font-family: "Just Another Hand", cursive
  color: color
  clear: left
  margin: 0
  padding: 0

h1
  font-size: 5em
  line-height: 1.4
  margin-bottom: 0.5em

h2
  font-size: 2em
  line-height: 1
  margin-bottom: 0.5em

p
  margin: 0 0 1.5em

a, a:visited
  color: #F95A5A
  text-decoration: none

a:focus, a:hover
  color: #665248
  text-decoration: underline

ul, ol
  margin: 0 1.5em 1.5em 0
  list-style-type: none


/* Style */
#home-view
  width: 600px
  height: 200px
  margin: 5px auto
  padding: 0

#content
  background: background-color
  padding: 0
  border-radius: 4px

  div.header, div.page
    > div
      display: none
  &.menu
    div.menu
      display: block

      img
        padding: 0 2px
        cursor: pointer
        opacity: 0.9
        &:hover
          opacity: 1

  &.shop
    div.shop
    div.pagination
      display: block

  &.fridge
    div.fridge
    div.pagination
      display: block

  &.kitchen
    div.kitchen
    div.pagination
      display: block

  &.recipes
    div.recipes
    div.pagination
      display: block

  .page
    margin-top: 50px

  img.menu
    position: absolute
    left: 5px
    top: 5px
    width: 64px
    height: 64px
    cursor: pointer
    opacity: 0.9
    &:hover
      opacity: 1

  .pagination
    display: block
    position: absolute
    right: 5px
    top: 5px
    height: 16px
    cursor: pointer
    opacity: 0.9
    &:hover
      opacity: 1

  .navigation
    position: absolute
    top: 50%
    margin-top: -15px
    width: 17px
    height: 30px
    cursor: pointer
    &.left
      background: url(../images/arrows.png) no-repeat left top
      left: 10px
    &.right
      background: url(../images/arrows.png) no-repeat left bottom
      right: 10px

   form
     button
       margin: .1em

  .form-group
    padding: .1em

    input
    select
    textarea
      font-size: .8em

#shop
  font-size: 1.5em

  .recipe
  .btn-primary
    font-size: 1.5em

#fridge
  font-size: 2em
  #product-quantity
  #product-price
    text-align: right
  ul
    margin-top: 1em

    img
      width: 32px
      height: 32px
  .delete
    cursor: pointer
    .btn
      display: none
  .product:hover
    .delete
      .btn
        display: inline
  .actions
    margin-left: .5em
    .btn
      margin: .2em

#recipes
  font-size: 2em
  ul
    margin-top: 1em

    img
      width: 128px
      height: 128px
    .description
      text-align: left

  ul.recipes
    > li
      border: 1px dotted black
      padding: .5em

      .image
        padding: 5px

  .recipe-products
    text-align: left
    
    ul
      margin: 0

  .delete
    cursor: pointer
    .btn
      display: none
  .recipe:hover
    .delete
      .btn
        display: inline
